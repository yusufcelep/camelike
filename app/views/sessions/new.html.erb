<div class="columns">
    <div class="column"></div>
    <div class="column">
        <div class="box">
          <h5 class="title is-5 has-text-link has-text-centered is-italic has-text-weight-bold is-family-code">
          ~ Camelike ~
          </h5> 
          <%= form_tag @sessions do %>
            <div class="field">
              <p class="control has-icons-left">
                <label class="label">Username</label>
                <input class="input" type= "text" 
                  <%= text_field_tag :username %>
              </p>
            </div>
            <div class="field">
              <p class="control has-icons-left">
                <label class="label">Password</label>
                <input class="input" type= "password" 
                  <%= password_field_tag :password %> 
              </p>
            </div>            
            <% if @errors %>
                <p class="has-text-centered	has-text-danger	">
                    <%= @errors %>
                </p>
            <% end %>
            <div class="field actions">
              <p class="control">
                <button class="button">
                  <% submit_tag%> Login 
                </button>
              </p>
              <br/>
              <p>If you don't have an account: <%= link_to "Sign up!", signup_path %></p>
            </div>
          <% end %>
          <!-- End of Content -->
        </div>
    </div>
    <div class="column"></div>
</div>